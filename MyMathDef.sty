% definizione di stili
\theoremstyle{definition}
\newtheorem{dne}{Definizione}[chapter]
\newcommand{\Dne}[2][]{\begin{dne}[#1]#2\end{dne}}

\theoremstyle{plain}
\newtheorem{teor}{Teorema}[chapter]
\newcommand{\Th}[2][]{\begin{teor}[#1]#2\end{teor}}
\newtheorem{lemma}[teor]{Lemma}
\newcommand{\Lemma}[2][]{\begin{lemma}[#1]#2\end{lemma}}
\newtheorem{cor}[teor]{Corollario}
\newcommand{\Cor}[2][]{\begin{cor}[#1]#2\end{cor}}
\newtheorem{prin}{Principio}[chapter]
\newcommand{\Princ}[2][]{\begin{prin}[#1]#2\end{prin}}
\newtheorem{prop}{Proposizione}[chapter]
\newcommand{\Prop}[2][]{\begin{prop}[#1]#2\end{prop}}
\newtheorem{leg}{Legge}[chapter]
\newcommand{\Legge}[2][]{\begin{leg}[#1]#2\end{leg}}
\newtheorem{hp}{Ipotesi}[chapter]
\newtheorem{regola}{Regola}[chapter]

\theoremstyle{remark}
\newtheorem{oss}{Osservazione}[chapter]
\newcommand{\Oss}[2][]{\begin{oss}[#1]#2\end{oss}}
\newtheorem{nne}{Notazione}[chapter]
\newcommand{\Nne}[2][]{\begin{nne}[#1]#2\end{nne}}
\newtheorem{nota}{Nota}[chapter]
\newcommand{\Nota}[2][]{\begin{nota}[#1]#2\end{nota}}
\newtheorem{ex}{Esempio}[chapter]
\newcommand{\Ex}[2][]{\begin{ex}[#1]#2\end{ex}}
\newtheorem{esercizio}{\underline{Esercizio}}[chapter]
\newcommand{\Es}[2][]{\begin{esercizio}[#1]\textit{#2}\end{esercizio}}

